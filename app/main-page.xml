<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
 <Page.actionBar>
      <ActionBar title="  Native Scheduler" android.icon="res://icon" android.iconVisibility="always">
       <!--<NavigationButton android.systemIcon="ic_menu_back"/>-->
       </ActionBar>
  </Page.actionBar>
  <GridLayout  columns="*" rows="120, 50, *, 50">

    <Label text="You have no events added for today" class="eventsCount" textWrap="true"  row="0"/>
    <StackLayout orientation="horizontal" class="buttonContainer"  row="1">
        <Button text="Add new" tap="{{ navigateToAddEventPage }}" />
        <Button text="Go to events" tap="{{ navigateToEventsPage }}" />
    </StackLayout>
    
    
    <GridLayout rows="*" columns="*" row="2">
    
    <ScrollView>
        <GridLayout rows="*" columns="*" row="0">
        
            <WrapLayout orientation="horizontal" 
                        horizontalAlignment="center"     
                        width="100%" 
                        height="100%" 
                        backgroundColor="transparent"  
                        id="notes-wrapper-imgs">                           
                            
            </WrapLayout>
              
            <WrapLayout orientation="horizontal" 
                            horizontalAlignment="center"     
                            width="100%" 
                            height="100%" 
                            backgroundColor="transparent"  
                                   id="notes-wrapper-text"> 
                            
            </WrapLayout>  
                     
        </GridLayout>
    </ScrollView>
<!--    
    <FAB:fab tap="{{navigateToAddNotePage}}"                                 
        icon="res://icon"
        rippleColor="#f1f1f1"
        class="fab-button" />-->

    </GridLayout>

    <!--<GridLayout columns="*, *" rows="*, *"  row="2" style.backgroundColor="white" >
        <Image row="0" col="0" src="res://note" stretch="fill" />
            <Image row="1" col="1" src="res://note" stretch="fill" />
        <Image row="1" col="0" src="res://note" stretch="fill"/>
        <Image row="0" col="1" src="res://note" stretch="fill"/>
    </GridLayout>-->

    <StackLayout height="50" orientation="horizontal" class="buttonContainer" backgroundColor="white"  row="3">
        <Button text="New Note" tap="{{ navigateToAddNotePage }}" />
        <Button text="Go to notes" tap="{{ navigateToNotesPage }}" />
     </StackLayout>

  </GridLayout>
</Page>
