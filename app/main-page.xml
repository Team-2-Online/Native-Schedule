<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
<Page.actionBar>
    <ActionBar title="  Native Scheduler" android.icon="res://icon" android.iconVisibility="always">
    <!--<NavigationButton android.systemIcon="ic_menu_back"/>-->
    </ActionBar>
</Page.actionBar>

<GridLayout rows="*" columns="*" height="100%">
  
    <GridLayout  columns="*" rows="1*, 5*, 1*" id="main-grid" height="100%">  
    
        <GridLayout rows="" columns="*, *">
                <StackLayout col="0" orientation="horizontal">
                    <Label text="&#xf0a5;" horizontalAlignment="left"  class="font-awesome nav-label-left" />
                    <Label text="swipe to notes" horizontalAlignment="left"  class="nav-label-left" />
                </StackLayout>
                
                <StackLayout col="1" orientation="horizontal" horizontalAlignment="right"  >
                    <Label text="swipe to events" horizontalAlignment="right"  class="nav-label-right" />
                    <Label text="&#xf0a4;" horizontalAlignment="right"  class="font-awesome nav-label-right" />
                </StackLayout>  
        </GridLayout>
        
        <GridLayout rows="*" columns="*" row="1">    
            <ScrollView height="100%" row="1">
                <GridLayout rows="*" columns="*" row="0">        
                    <WrapLayout orientation="horizontal" 
                                horizontalAlignment="center"     
                                width="100%" 
                                height="100%" 
                                backgroundColor="transparent"  
                                id="notes-wrapper-imgs">                           
                                    
                    </WrapLayout>
                    
                    <WrapLayout orientation="horizontal" 
                                horizontalAlignment="center"     
                                width="100%" 
                                height="100%" 
                                backgroundColor="transparent"  
                                id="notes-wrapper-text"> 
                                    
                    </WrapLayout>                       
                </GridLayout>
            </ScrollView>
        </GridLayout>

         <GridLayout rows="" columns="*, *" row="2">
                <StackLayout col="0" orientation="horizontal">
                    <Label text="&#xf0a5;" horizontalAlignment="left"  class="font-awesome nav-label-left" />
                    <Label text="swipe to notes" horizontalAlignment="left"  class="nav-label-left" />
                </StackLayout>
                
                <StackLayout col="1" orientation="horizontal" horizontalAlignment="right"  >
                    <Label text="swipe to events" horizontalAlignment="right"  class="nav-label-right" />
                    <Label text="&#xf0a4;" horizontalAlignment="right"  class="font-awesome nav-label-right" />
                </StackLayout>  
        </GridLayout>

    </GridLayout>  
  
</GridLayout>
    
    
</Page>
