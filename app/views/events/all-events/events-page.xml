<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <Page.actionBar>
        <ActionBar title="Events" android.icon="res://icon" android.iconVisibility="always">
            <ActionBar.actionItems>
                <ActionItem ios.systemIcon="4" android.systemIcon = "ic_menu_add" tap="{{navigateToAddEventPage}}" />
            </ActionBar.actionItems>
            <NavigationButton android.systemIcon="ic_menu_back"/>
        </ActionBar>
    </Page.actionBar>
    <ScrollView>
        <ListView items="{{ allEvents() }}">
            <ListView.itemTemplate>
                <Label text="{{ eventTitle }}" textWrap="true" class="title" />
            </ListView.itemTemplate>
        </ListView>
